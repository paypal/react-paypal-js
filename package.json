{
    "name": "@paypal/react-paypal-js",
    "version": "0.2.0",
    "description": "React components for the JS SDK",
    "keywords": [
        "react",
        "component",
        "paypal",
        "checkout",
        "payment"
    ],
    "main": "dist/react-paypal.node.js",
    "module": "dist/react-paypal.esm.js",
    "scripts": {
        "build": "rollup --config",
        "format": "prettier --write .",
        "lint": "eslint .",
        "test": "jest",
        "storybook": "start-storybook -p 6006",
        "build-storybook": "build-storybook",
        "deploy-storybook": "storybook-to-ghpages"
    },
    "files": [
        "dist"
    ],
    "license": "Apache-2.0",
    "repository": {
        "type": "git",
        "url": "git://github.com/paypal/react-paypal-js.git"
    },
    "dependencies": {
        "@paypal/paypal-js": "^1.0.3",
        "@paypal/sdk-constants": "^1.0.75",
        "prop-types": "^15.7.2"
    },
    "devDependencies": {
        "@babel/core": "^7.10.4",
        "@babel/preset-env": "^7.10.4",
        "@babel/preset-react": "^7.10.4",
        "@rollup/plugin-babel": "^5.0.4",
        "@rollup/plugin-node-resolve": "^8.4.0",
        "@rollup/plugin-replace": "^2.3.3",
        "@storybook/addon-actions": "^6.0.16",
        "@storybook/addon-essentials": "^6.0.16",
        "@storybook/addon-links": "^6.0.16",
        "@storybook/react": "^6.0.16",
        "@storybook/storybook-deployer": "^2.8.7",
        "@testing-library/react": "^10.4.7",
        "babel-jest": "^26.1.0",
        "babel-loader": "^8.1.0",
        "eslint": "^7.4.0",
        "eslint-config-prettier": "^6.11.0",
        "eslint-plugin-react": "^7.20.5",
        "http-server": "^0.12.3",
        "husky": "^4.2.5",
        "jest": "^26.1.0",
        "lint-staged": "^10.2.11",
        "prettier": "^2.0.5",
        "react": "^16.13.1",
        "react-dom": "^16.13.1",
        "react-is": "^16.13.1",
        "rollup": "^2.21.0"
    },
    "peerDependencies": {
        "react": "^16.3.0",
        "react-dom": "^16.3.0"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "*.js": [
            "prettier --write",
            "eslint"
        ],
        "*.{json,css,html,md}": [
            "prettier --write"
        ]
    }
}
