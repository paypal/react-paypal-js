{
    "parser": "@typescript-eslint/parser",
    "plugins": ["@typescript-eslint"],
    "extends": [
        "eslint:recommended",
        "plugin:@typescript-eslint/recommended",
        "plugin:react/recommended"
    ],
    "env": {
        "browser": true,
        "es2020": true,
        "node": true,
        "jest": true
    },
    "parserOptions": {
        "ecmaVersion": 11,
        "sourceType": "module"
    },
    "globals": {
        "page": "readonly"
    },
    "ignorePatterns": ["dist/*.js"],
    "settings": {
        "react": {
            "version": "16.3"
        }
    },
    "rules": {
        "react/prop-types": "off"
    }
}
