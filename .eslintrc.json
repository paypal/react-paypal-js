{
    "extends": [
        "eslint:recommended",
        "plugin:react/recommended",
        "prettier",
        "prettier/react"
    ],
    "env": {
        "browser": true,
        "es2020": true,
        "node": true,
        "jest": true
    },
    "parserOptions": {
        "ecmaVersion": 11,
        "sourceType": "module"
    },
    "globals": {
        "page": "readonly"
    },
    "ignorePatterns": ["dist/*.js"],
    "settings": {
        "react": {
            "version": "16.3"
        }
    }
}
